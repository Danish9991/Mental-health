<%- include("partials/header") %>
<style>
    .card-img-top {
    width: 100%;
    height: 15vw;
    object-fit: cover;
}
</style>

<div class="container">
    <h1>this is categories page!</h1>
    <hr>
<div class="row">
<% if(posts.length>0){ %>
    
   <% posts.forEach(function(post){ %>

   
    <div class="col col-6">
    <div style="margin: auto;margin-top: 30px;">
        <div class="card">
            <img class="card-img-top" src="/uploads/<%=post.image%>" alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title"><%=post.title%></h5>
              <p class="card-text"><%=post.desc%></p>
              <p class="card-text"><small class="text-muted"><%=post.create%></small></p>
              
            </div>
          </div>
        </div>
    </div>

    <% }) %>
<% } else{ %>
    <h1>No post yet!</h1>
 <%} %>

</div>
</div>

<%- include("partials/footer") %>