<%- include("../adminPartials/header") %>
<div style="margin: auto; width: 50%;margin-top: 30px;">
<div class="card " style="width: 50rem;">
    <img class="card-img-top" src="/uploads/<%=post.image%>" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title"><%=post.title%></h5>
      <p class="card-text"><%=post.desc%></p>
      <p class="card-text"><small class="text-muted"><%=post.create%></small></p>
      <span><a class="btn btn-sm btn-warning" href="/admin/posts/<%=post._id%>/edit">edit</a></span>
      <form style="display: inline;" action="/admin/posts/<%=post._id%>?_method=DELETE" method="POST">
      <span><button type="submit" class="btn btn-sm btn-danger">delete</button></span>
    </form>
    </div>
  </div>
</div>


<%- include("../adminPartials/footer") %> 